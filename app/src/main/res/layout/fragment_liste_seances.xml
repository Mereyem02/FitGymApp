<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gris_fond">

    <!-- Barre supérieure -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/violet_principal"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestion des séances"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Rechercher une séance..."
            android:paddingStart="40dp"
            android:drawableStart="@drawable/ic_search"
            android:background="@drawable/search_background"
            android:textColor="@android:color/black"
            android:textColorHint="#DDDDDD"
            android:inputType="text"
            android:autofillHints="none"
            />
    </LinearLayout>

    <!-- Spinner filtre catégorie (ajouté) -->
    <Spinner
        android:id="@+id/spinnerFilterCategorie"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="12dp"
        android:spinnerMode="dropdown"/>

    <!-- Bouton Ajouter -->
    <Button
        android:id="@+id/btnAddSeance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+ Ajouter une séance"
        android:background="@color/violet_fonce"
        android:textColor="@android:color/white"
        android:layout_margin="12dp"
        android:padding="10dp"
        android:drawableStart="@drawable/ic_add" />

    <!-- Liste des séances -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSeances"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Image de la séance -->
        <ImageView
            android:id="@+id/imageSeance"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_image"
            android:layout_marginEnd="12dp"
            android:background="@drawable/rounded_corners" />

        <!-- Infos de la séance -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titre de la séance"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/texte_noir"/>

            <!-- Catégorie et niveau (badge) -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/categorieSeance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_badge_violet"
                    android:padding="4dp"
                    android:textColor="@android:color/white"
                    android:text="Yoga"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/niveauSeance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_badge_noir"
                    android:padding="4dp"
                    android:textColor="@android:color/white"
                    android:text="Intermédiaire"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- Coach et prix -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageCoach"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_coach"
                    app:tint="#555" />

                <TextView
                    android:id="@+id/Prix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Sarah Martin · 25€"
                    android:textSize="13sp"
                    android:textColor="#555"/>
            </LinearLayout>

            <!-- Date et heure -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="#777"/>

                <TextView
                    android:id="@+id/dateHeure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="05/11/2025 · 09:00"
                    android:textSize="12sp"
                    android:textColor="#777"/>
            </LinearLayout>

            <!-- Places -->
            <TextView
                android:id="@+id/places"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Places: 8/15"
                android:textSize="13sp"
                android:textColor="@color/violet_principal"/>

            <!-- Boutons Modifier/Supprimer -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <Button
                    android:id="@+id/btnModifier"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="1dp"
                    android:text="Modifier"
                    android:textAllCaps="false"
                    android:textColor="#9C27B0"
                    android:textSize="10sp"
                    app:icon="@drawable/ic_edit"
                    app:iconSize="14dp"
                    app:iconTint="#9C27B0"
                    app:strokeColor="#9C27B0"
                    app:strokeWidth="1dp" />

                <Button
                    android:id="@+id/btnSupprimer"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Supprimer"
                    android:textAllCaps="false"
                    android:textColor="#B42C3E"
                    android:textSize="10sp"
                    app:icon="@drawable/ic_delete"
                    app:iconSize="14dp"
                    app:iconTint="#CE1010"
                    app:strokeColor="#DE0D0D"
                    app:strokeWidth="1dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

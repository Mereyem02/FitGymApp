<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F5F7"
    android:paddingBottom="80dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/gradient_header">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_circle_white"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Retour" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profil Coach"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginStart="24dp"
                android:layout_marginTop="70dp" />

            <LinearLayout
                android:id="@+id/coachHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_below="@id/title"
                android:layout_marginTop="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp">

                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp">

                    <ImageView
                        android:id="@+id/coachAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_avatar_placeholder"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle_white_border"
                        android:contentDescription="Avatar coach" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/coachName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nom du Coach"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/coachEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="coach@fitness.com"
                        android:textColor="@android:color/white"
                        android:alpha="0.85"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/coachStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="● Actif"
                        android:textColor="#4CAF50"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <!-- Informations du coach -->
        <androidx.cardview.widget.CardView
            android:layout_marginTop="-40dp"
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:text="Informations du coach"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!-- Téléphone -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_phone"
                        android:contentDescription="Téléphone" />

                    <TextView
                        android:id="@+id/coachPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+33 6 12 34 56 78"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <!-- Spécialités -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_dumbbell"
                        android:contentDescription="Spécialités" />

                    <TextView
                        android:id="@+id/coachSpecialties"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Yoga, Pilates, Cardio"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <!-- Expérience -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_star"
                        android:contentDescription="Expérience" />

                    <TextView
                        android:id="@+id/coachExperience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 ans d'expérience"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <!-- Certification -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_certificate"
                        android:contentDescription="Certification" />

                    <TextView
                        android:id="@+id/coachCertification"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Certifié BPJEPS"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginStart="12dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Statistiques -->
        <androidx.cardview.widget.CardView
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:text="Statistiques"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- Séances données -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/totalSessions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="156"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#7C3AED" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Séances"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Note moyenne -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/averageRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.8"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#F59E0B" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Note moy."
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Nombre d'avis -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/totalReviews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="89"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#10B981" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avis"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Actions administrateur -->
        <androidx.cardview.widget.CardView
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:text="Actions administrateur"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnEditCoach"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_button_card"
                    android:drawableStart="@drawable/ic_edit"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical|start"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="Modifier les informations"
                    android:textAllCaps="false"
                    android:textColor="#333333"
                    android:textSize="16sp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnViewSessions"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_button_card"
                    android:drawableStart="@drawable/ic_calendar"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical|start"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="Voir les séances"
                    android:textAllCaps="false"
                    android:textColor="#333333"
                    android:textSize="16sp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnViewReviews"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_button_card"
                    android:drawableStart="@drawable/ic_star"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical|start"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="Voir les avis"
                    android:textAllCaps="false"
                    android:textColor="#333333"
                    android:textSize="16sp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnResetPassword"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_button_card"
                    android:drawableStart="@drawable/ic_lock"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical|start"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="Réinitialiser le mot de passe"
                    android:textAllCaps="false"
                    android:textColor="#333333"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E7EB"
                    android:layout_marginVertical="12dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnToggleStatus"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_button_card"
                    android:drawableStart="@drawable/ic_toggle"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical|start"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="Désactiver le compte"
                    android:textAllCaps="false"
                    android:textColor="#F59E0B"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E7EB"
                    android:layout_marginVertical="12dp" />

                <Button
                    android:id="@+id/btnDeleteCoach"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_delete_account_ripple"
                    android:text="Supprimer le coach"
                    android:textSize="16sp"
                    android:textColor="#D32F2F"
                    android:gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>

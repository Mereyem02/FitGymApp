<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatarParticipant"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/avatar_placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nomParticipant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Claire R."
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333" />

            <!-- Container pour les étoiles -->
            <LinearLayout
                android:id="@+id/layoutStars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Les étoiles seront ajoutées dynamiquement -->
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/commentaireAvis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="13sp"
            android:textColor="#666"
            android:lineSpacingExtra="2dp" />

        <TextView
            android:id="@+id/dateAvis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textColor="#999" />
    </LinearLayout>
</LinearLayout>
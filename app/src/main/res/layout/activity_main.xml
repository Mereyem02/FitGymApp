<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:weightSum="2">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="190dp"
        android:layout_height="148dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Logo de l'application"
        android:src="@drawable/iconlogin" />

    <TextView
        android:id="@+id/textBienvenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Bienvenue"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnClient"
            android:layout_width="0dp"
            android:layout_height="89dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_choix_selector"
            android:text="Client"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnAdmin"
            android:layout_width="0dp"
            android:layout_height="84dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_choix_selector"
            android:text="Administrateur"
            android:textColor="@color/black" />
    </LinearLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/imageSeance"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:background="#E5E7EB" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titreSeance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yoga Vinyasa Flow"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#333" />

        <TextView
            android:id="@+id/categorieSeance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Yoga"
            android:textSize="13sp"
            android:textColor="#999" />

        <TextView
            android:id="@+id/dateSeance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="5 nov. • 09:00"
            android:textSize="13sp"
            android:textColor="#666" />
    </LinearLayout>

    <TextView
        android:id="@+id/prixSeance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25€"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#6B7FFF"
        android:layout_gravity="center_vertical" />
</LinearLayout>
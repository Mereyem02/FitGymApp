<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouter une seance"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remplissez les informations de la séance"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"/>

        <!-- Titre -->
        <EditText
            android:id="@+id/editTitre"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Titre *"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:layout_marginTop="12dp"/>

        <!-- Label Catégorie -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Catégorie"
            android:textStyle="bold"
            android:textColor="#444444"
            android:layout_marginTop="10dp"/>

        <Spinner
            android:id="@+id/spinnerCategorie"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

        <!-- Label Coach -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coach"
            android:textStyle="bold"
            android:textColor="#444444"
            android:layout_marginTop="10dp"/>

        <Spinner
            android:id="@+id/spinnerCoach"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

        <!-- Label Niveau -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Niveau"
            android:textStyle="bold"
            android:textColor="#444444"
            android:layout_marginTop="10dp"/>

        <Spinner
            android:id="@+id/spinnerNiveau"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

        <!-- Date & Heure -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:weightSum="2">

            <EditText
                android:id="@+id/editDate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="Date *"
                android:focusable="false"
                android:background="@drawable/edittext_background"
                android:padding="8dp"/>

            <EditText
                android:id="@+id/editHeure"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="Heure *"
                android:focusable="false"
                android:background="@drawable/edittext_background"
                android:padding="8dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/editDuree"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Durée (min)"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/editPrix"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Prix (€)"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/editPlacesTotales"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Places totales"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/editPlacesDisponibles"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Places disponibles"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/editDescription"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:hint="Description"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:gravity="top"/>

        <!-- Boutons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAnnuler"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Annuler"
                android:textColor="@color/nav_item_color"
                app:backgroundTint="@color/chip_background"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAjouter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Ajouter"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/purple_500"
                android:insetLeft="0dp"
                android:insetRight="0dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>

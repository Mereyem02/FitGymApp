<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fond blanc -->
    <solid android:color="#FFFFFF" />

    <!-- Coins arrondis -->
    <corners android:radius="16dp" />

    <!-- Bordure subtile (optionnel) -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Ombre via padding pour que le popup ait un effet "flottant" -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"/>
</shape>
